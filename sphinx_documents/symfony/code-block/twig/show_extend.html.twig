{% extends "EpsiBlogBundle::layout.html.twig" %}

{% block content %}
    <h2>{{ name }}</h2>
    <p>{{ date|date("m/d/Y") }}</p>
    <ul>
        {% for tag in tags %}
            <li>{{ tag }}</li>
            {% endfor %}
    </ul>
    <p>{{ html }}</p>
    <p>{{ html|raw }}</p>
{% endblock %}

